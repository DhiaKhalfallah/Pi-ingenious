{% extends 'backend/base.html.twig' %}
{% block nav %}
    {% include 'backend/include/navbar.html.twig' %}
{% endblock %}
{% block sidebar %}
    {% include 'backend/include/sidebar.html.twig' %}
{% endblock %}




{% block body %}
    <div class="content-page">
        <div class="container-fluid">
            <h1>Blog</h1>

            <table class="table">
                <tbody>
                <tr>
                    <th>Id User</th>
                    <td>{{ blog.user }}</td>
                </tr>
                <tr>
                    <th>Category</th>
                    <td>{{ blog.cat }}</td>
                </tr>

                <tr>
                    <th>Date</th>
                    <td>{{ blog.date ? blog.date|date('Y-m-d') : '' }}</td>
                </tr>

                    <th>blog</th>
                    <td>{{ blog.contenu }}</td>
                </tr>
                <tr>
                    <th>Titre</th>
                    <td>{{ blog.titre }}</td>
                </tr>
                <tr>
                    <th>Image</th>
                    <td><a class ="btn btn-success"href ="../../{{ blog.image }}">Show image </a></td>

                </tr>
                </tbody>
            </table>

            <a href="{{ path('blog_index_backend') }}">back to list</a>

            <a href="{{ path('blog_edit_backend', {'id': blog.id}) }}">edit</a>

            {{ include('backend/blog/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
