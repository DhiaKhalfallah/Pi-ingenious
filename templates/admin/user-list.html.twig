{% extends 'admin/base.html.twig' %}

{% block nav %}
    {% include 'admin/include/navbar.html.twig' %}
{% endblock %}
{% block sidebar %}

    {% include 'admin/include/sidebar.html.twig' %}
{% endblock %}


{% block body %}









    <div class="content-page">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card card-block card-stretch card-height">
                        <div class="card-header d-flex justify-content-between">
                            <div class="header-title">
                                <h4 class="card-title mb-0">Candidates List</h4>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="data-tables table" style="width:100%">
                                    <thead class="light">
                                    <tr>
                                        <th>Picture</th>
                                        <th>Name</th>
                                        <th>Surname</th>
                                        <th>Email</th>
                                        <th>Phone No</th>
                                        <th>Birthday</th>
                                        <th>Country</th>
                                        <th>About</th>

                                    </tr>
                                    </thead>
                                    {% for candidate in candidates %}
                                    <tbody>
                                    <tr>
                                        <td>
                                            <img src="{{ candidate.profilePic }}" class="rounded avatar-40 img-fluid" alt="">
                                        </td>
                                        <td>{{ candidate.nom }}</td>
                                        <td>{{ candidate.prenom }}</td>
                                        <td>{{ candidate.email }}</td>
                                        <td>{{ candidate.tel }}</td>
                                        <td>
                                            {{ candidate.birthday|date("d/m/Y") }}

                                        </td>
                                        <td>{{ candidate.pays }}</td>
                                        <td>{{ candidate.AboutYou }}</td>

                                    </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <div class="card-header d-flex justify-content-between">
                            <div class="header-title">
                                <h4 class="card-title mb-0">Entreprises List</h4>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="data-tables table" style="width:100%">
                                    <thead class="light">
                                    <tr>
                                        <th>Picture</th>
                                        <th>Name</th>
                                        <th>Email</th>
                                        <th>Phone No</th>
                                        <th>Address</th>
                                        <th>Website</th>
                                        <th>About</th>

                                    </tr>
                                    </thead>
                                    {% for entreprise in entreprises %}
                                    <tbody>
                                    <tr>
                                        <td>
                                            <img src="{{ entreprise.profilPic }}" class="rounded avatar-40 img-fluid" alt="">
                                        </td>
                                        <td>{{ entreprise.nom }}</td>
                                        <td>{{ entreprise.email }}</td>
                                        <td>{{ entreprise.tel }}</td>
                                        <td>
                                            {{ entreprise.adresse }}

                                        </td>
                                        <td>{{ entreprise.siteweb }}</td>
                                        <td>{{ entreprise.About }}</td>

                                    </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>









{% endblock %}